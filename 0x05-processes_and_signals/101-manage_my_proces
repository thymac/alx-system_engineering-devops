#!/usr/bin/env bash

PIDFILE="/var/run/my_process.pid"
PROGRAM="/path/to/manage_my_process"

start_program() {
    if [ -f "$PIDFILE" ]; then
        echo "Error: $PROGRAM is already running (PID $(cat $PIDFILE))"
        exit 1
    fi
    $PROGRAM &
    echo $! > $PIDFILE
    echo "manage_my_process started"
}

stop_program() {
    if [ ! -f "$PIDFILE" ]; then
        echo "Error: $PROGRAM is not running"
        exit 1
    fi
    kill $(cat $PIDFILE)
    rm $PIDFILE
    echo "manage_my_process stopped"
}

case "$1" in
    start)
        start_program
        ;;
    stop)
        stop_program
        ;;
    restart)
        stop_program
        start_program
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit 0
